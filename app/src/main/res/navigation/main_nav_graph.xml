<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.io.gazette.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_bookmarksFragment"
            app:destination="@id/bookmarkedFragment" />
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_homeFragment_to_addToReadingListDialogFragment"
            app:destination="@id/addToReadingListDialogFragment" />
    </fragment>
    <fragment
        android:id="@+id/bookmarkedFragment"
        android:name="com.io.gazette.ui.bookmarks.BookmarksFragment"
        android:label="fragment_bookmarks"
        tools:layout="@layout/fragment_bookmarks" >
        <action
            android:id="@+id/action_bookmarksFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.io.gazette.ui.details.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="news_url"
            app:argType="string" />
    </fragment>
    <dialog
        android:id="@+id/addToReadingListDialogFragment"
        android:name="com.io.gazette.readingList.AddToReadingListDialogFragment"
        android:label="fragment_add_to_reading_list_dialog"
        tools:layout="@layout/fragment_add_to_reading_list_dialog" >
        <action
            android:id="@+id/action_addToReadingListDialogFragment_to_addNewReadingListFragment"
            app:destination="@id/addNewReadingListFragment" />
        <argument
            android:name="storyUrl"
            app:argType="string" />
    </dialog>
    <dialog
        android:id="@+id/addNewReadingListFragment"
        android:name="com.io.gazette.readingList.AddNewReadingListFragment"
        android:label="fragment_add_new_reading_list"
        tools:layout="@layout/fragment_add_new_reading_list" />
</navigation>